
@{
    ViewBag.Title = "ContractNote";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
    <style>
        .table-box {
            height: 443px;
            overflow-y: scroll;
            background: #fff;
        }

        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid #808080;
            border-collapse: collapse;
        }

        th {
            position: sticky;
            top: 0;
            color: #fff;
            background: #00bcd4;
        }
    </style>
}


<div class="page-wrapper" style="margin-top: 72px;">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-7 col-md-7 col-sm-7" id="Ledger" style="margin: auto;">


                <div class="card" style="margin-top: 20px;">
                    <div class="card-header" style="background-color:#eb2c2e70;">
                        <h4 class="card-title" style="color:black">Contract Note List</h4>

                    </div>
                    <!--end card-header-->
                    <div class="card-body">

                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    <a href="javascript:void(0);" class="btn btn-dark" onclick="history.go(-1);"><i class="fa fa-arrow-left"></i></a>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12" style="margin: auto;">

                                <div class="card" id="ExportedGrid">
                                    <div class="card-body" style="padding: 0;">
                                        <div class="table-responsive table-box">
                                            <table class="table table-striped table-bordered" style="width:100%">
                                                <thead>
                                                    <tr>
                                                        <th style="border: 1px solid  #808080;background-color:#6496d8;font-size: 14px;font-weight: bold;color:white;text-align:center;">Date</th>
                                                        <th style="border: 1px solid  #808080;background-color:#6496d8;font-size: 14px;font-weight: bold;color:white;text-align:center;">Click to View</th>
                                                    </tr>
                                                </thead>
                                                <tbody>

                                                    @foreach (var str in ViewBag.DataList)
                                                    {
                                                    <tr>
                                                        <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                            @str.Key
                                                        </td>
                                                        <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                            <p>@Html.ActionLink("View", "Download", "ContractNote", new { filePath = @str.Value, fileName = @str.Key }, null)</p>
                                                        </td>
                                                    </tr>
                                                    }

                                                </tbody>
                                            </table>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>















































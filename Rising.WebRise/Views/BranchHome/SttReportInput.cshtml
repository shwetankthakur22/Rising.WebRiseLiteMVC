@using Rising.WebRise.Models
@model GenericModel

@{
    ViewBag.Title = "SttReportInput";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="page-wrapper" style="margin-top: 72px;">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6" id="Ledger" style="margin: auto;margin-top: 20px;">


                <div class="card">
                    <div class="card-header" style="background-color:#eb2c2e">
                        <h4 class="card-title" style="color:white">
                            STT Report Input
                        </h4>

                    </div>
                    <!--end card-header-->
                    <div class="card-body">
                        @using (Html.BeginForm("SttReportList", "BranchHome", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div>

                                @if ((Session["CodeSearchFilterType"] as List<string>).Count > 0)
                                {
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4 col-sm-4">
                                            @Html.LabelFor(m => m.ClientCode, new { @class = "form-label" })
                                            @Html.TextBoxFor(m => m.ClientCode, null, new { @class = "form-control" })


                                        </div>
                                        <div class="col-lg-4 col-md-4 col-sm-4">
                                            <label class="form-label" style="margin-top: 25px;"></label>
                                            <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#STTCodeFrom"><i class="fa fa-user"></i></button>
                                        </div>
                                    </div>
                                }
                                <div class="row" style="margin-top:10px">
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        @Html.LabelFor(m => m.DateFrom, new { @class = "form-label", @style = "font-size: 14px;" })
                                        @Html.TextBoxFor(m => m.DateFrom, null, new { @Value = Model.DateFrom.ToString("yyyy-MM-dd"), @class = "form-control", @id = "date-end", @type = "date" })
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        @Html.LabelFor(m => m.DateTo, new { @class = "form-label", @style = "font-size: 14px;" })
                                        @Html.TextBoxFor(m => m.DateTo, null, new { @Value = Model.DateTo.ToString("yyyy-MM-dd"), @class = "form-control", @id = "date-end", @type = "date", onchange = "" })
                                    </div>
                                </div>
                                <div class="row" style="margin-top:10px">
                                    <div class="col-lg-6 col-md-6 col-sm-6">
                                        @Html.LabelFor(m => m.Type, new { @class = "form-label", @style = "font-size: 14px;" })
                                        @Html.DropDownListFor(m => m.Type, new SelectList(new[] { "M", "E" }), new { @class = "form-control" })
                                    </div>
                                </div>
                                <div class="card-footer text-right">
                                    <input type="submit" value="View" class="btn btn-primary px-4" style="margin-right: 5px;" />
                                    <a href="javascript:void(0);" class="btn btn-red" onclick="history.go(-1);">Back</a>

                                </div>
                            </div>

                        }

                    </div>



                </div>
            </div>
        </div>


    </div>
</div>


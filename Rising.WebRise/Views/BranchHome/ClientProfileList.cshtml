@model Rising.WebRise.Models.GenericModel
@using System.Data

@{
    ViewBag.Title = "Client Profile List";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";

    <style>
        .table-box {
            height: 530px !important;
            overflow-y: scroll;
            background: #fff;
        }

        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid #808080;
            border-collapse: collapse;
        }

        th {
            position: sticky;
            top: 0;
            color: #fff;
            background: #00bcd4;
        }
    </style>
}




<div class="page-wrapper" style="margin-top: 72px;">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-11 col-md-11 col-sm-11" id="Ledger" style="margin: auto;">
                <div class="card" style="margin-top: 20px;">
                    <div class="card-header" style="background-color:#6496d8;">
                        <h4 class="card-title" style="color:white;margin-top: 10px;font-size:18px">Client Profile List</h4>

                    </div>
                    <!--end card-header-->
                    <div class="card-body">




                            <div class="row">
                                <div class="col-lg-8 col-md-8 col-sm-8">

                                    @using (Html.BeginForm("ClientProfileList", "BranchHome", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                                {
                                                <div class="card-body">
                                                    <div class="row" style="margin-top:-34px;">
                                                        <div class="col-lg-12 col-md-12 col-sm-12">
                                                            <div class="card-body">
                                                                <div class="row text-center">
                                                                    <div class="col-lg-3 col-md-3 col-sm-4">
                                                                        <label for="example-text-input" class="mb-2 mb-lg-0" style="font-size:17px;">Search Client :</label>
                                                                    </div>
                                                                    <div class="col-lg-3 col-md-3 col-sm-3">
                                                                        @Html.TextBoxFor(m => m.ClientCode, null, new { @class = "form-control" })
                                                                    </div>

                                                                    <div class="card text-right">
                                                                        <input type="submit" value="Search" class="btn btn-primary px-4" />
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </div>
                                                }

                                </div>
                                <div class="col-lg-4 col-md-4 col-sm-4">
                                    <div style="float:right;padding:2px 2px 2px 2px">

                                        <a href="javascript:void(0);" class="btn btn-dark" onclick="history.go(-1);"><i class="fa fa-arrow-left"></i></a>

                                    </div>
                                    <div style="float:right;padding:2px 2px 2px 2px">

                                        @using (Html.BeginForm("ExportExcel", "ReportExport", FormMethod.Post))
                                                   {
                                                    <input type="hidden" name="GridHtml" />
                                                    <button type="submit" class="btn btn-success" id="btnSubmitCP1"><i class="fa fa-file-excel"></i></button>

                                                    }

                                    </div>
                                    <div style="float:right;padding:2px 2px 2px 2px">

                                        @using (Html.BeginForm("ExportWord", "ReportExport", FormMethod.Post))
                                                   {
                                                    <input type="hidden" name="GridHtml" />
                                                    <button type="submit" class="btn btn-info" id="btnSubmitCP2"><i class="fa fa-file-word"></i></button>

                                                    }
                                    </div>
                                    <div style="float:right;padding:2px 2px 2px 2px">

                                        @using (Html.BeginForm("ExportPdf", "ReportExport",  FormMethod.Post))
                                                    {
                                                    <input type="hidden" name="GridHtml" />
                                                    <button type="submit" class="btn btn-danger" id="btnSubmitCP3"><i class="fa fa-file-pdf"></i></button>

                                                    }
                                    </div>
                                    <div style="float:right;padding:2px 2px 2px 2px">

                                        @using (Html.BeginForm("SendEmail", "ReportExport", FormMethod.Post))
                                                    {
                                                    <input type="hidden" name="GridHtml" />
                                                    <button type="submit" class="btn btn-orange" id="btnSubmitCP4"><i class="fa fa-envelope"></i></button>

                                                    }
                                    </div>
                                </div>
                            </div>
                            <div class="row">

                                <div class="col-lg-12 col-md-12 col-sm-12" style="margin: auto;">
                                    <div class="card" id="ExportedGridCP">
                                        <div class="card-body" style="padding: 0;">
                                            <div class="table-responsive browser_users" style="margin-top:-50px;">
                                                <div class="analytic-dash-activity" data-simplebar>
                                                    <div class="activity">
                                                        <table class="table table-bordered dt-responsive nowrap" style="border-collapse: collapse; border-spacing: 0; width: 100%;">

                                                            <thead>
                                                                <tr>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">CODE</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">NAME</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">BRANCH</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">SUBBRANCH</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">GROUP</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">MOBILE</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">EMAIL ID</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">A/C OPENING DATE</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">LAST TRADE DATE</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">DAYS</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">POA</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">STATUS</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">FIN LEDGER</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">NET POSITION</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">CONFIRMATION</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">DEMAT HOLDING</th>
                                                                    <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">DEMAT LEDGER</th>


                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @{
                                                                int rowCount = Model.dsOut.Tables[0].Rows.Count;
                                                                for (int i = 0; i < rowCount; i++)
                                                                {
                                                                            <tr>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][0]</td>
                                                                                <td style="text-align: left;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][1]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][2]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][3]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][4]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][5]</td>
                                                                                <td style="text-align: left;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][6]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][7]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][8]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][9]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][10]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">@Model.dsOut.Tables[0].Rows[i][11]</td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                                                    @Html.ActionLink("LEDGER", "Index", "FinancialLedger", new { code = @Model.dsOut.Tables[0].Rows[i][0] }, null)
                                                                                </td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                                                    @Html.ActionLink("NETPOS", "DATERANGE", "NetPosition", new { code = @Model.dsOut.Tables[0].Rows[i][0] }, null)
                                                                                </td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                                                    @Html.ActionLink("CONF", "Index", "TradeConf", new { code = @Model.dsOut.Tables[0].Rows[i][0] }, null)
                                                                                </td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                                                    @Html.ActionLink("DEMAT HOLDING", "DematHolding", "Demat", new { code = @Model.dsOut.Tables[0].Rows[i][0] }, null)
                                                                                </td>
                                                                                <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">
                                                                                    @Html.ActionLink("SCRIP LEDGER", "ScripWisepPosition", "NetPosition", new { code = @Model.dsOut.Tables[0].Rows[i][0] }, null)
                                                                                </td>

                                                                            </tr>
                                                                }


                                                                }

                                                            </tbody>
                                                        </table>
                                                    </div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

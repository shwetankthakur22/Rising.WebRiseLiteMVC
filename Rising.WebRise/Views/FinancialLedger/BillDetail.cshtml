@model Rising.WebRise.Models.BillDetailsOutput

@{
    ViewBag.Title = @Model.Header;
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}
<div class="page-wrapper" style="margin-top: 72px;">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-12" id="Ledger" style="margin: auto;">


                <div class="card" style="margin-top:20px;">
                    <div class="card-header" style="background-color:#6496d8;">
                        <h4 class="card-title" style="color:white">Bill Detail</h4>

                    </div>
                    <!--end card-header-->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-12">

                                <div style="float:right;padding:2px 2px 2px 2px">

                                    <a href="javascript:void(0);" class="btn btn-dark" onclick="history.go(-1);"><i class="fa fa-arrow-left"></i></a>

                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportExcel", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml1" />
                                    <button type="submit" class="btn btn-success" id="btnSubmit1"><i class="fas fa-file-excel"></i></button>

                                    }

                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportWord", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml2" />
                                    <button type="submit" class="btn btn-info" id="btnSubmit2"><i class="fas fa-file-word"></i></button>

                                    }
                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportPdf", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml3" />
                                    <button type="submit" class="btn btn-danger" id="btnSubmit3"><i class="fas fa-file-excel"></i></button>

                                    }
                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("SendEmail", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml4" />
                                    <button type="submit" class="btn btn-orange" id="btnSubmit4"><i class="fas fa-envelope"></i></button>

                                    }
                                </div>

                            </div>

</div>

                            <div class="row">
                                <div class="col-lg-12" style="margin: auto;">

                                    <div class="card" id="ExportedGrid">
                                        <div class="card-body" style="padding: 0;">
                                            <div class="table-responsive">
                                                <table class="table table-striped table-bordered" style="width:100%">
                                                    <tbody style="font-size:12px;">
                                                        <tr>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3; color:darkgreen;"><strong>Client Code</strong></td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;">@Model.ClientCode</td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"></td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>Name </strong></td>
                                                            <td colspan="3" style="border: 1px solid #d3d3d3;">@Model.ClientName</td>

                                                        </tr>

                                                        <tr>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3; color:darkgreen;"><strong>Trade Date</strong></td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;">@Model.TrnDate.ToString("dd-MMM-yyyy")</td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"></td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>Delivery Date</strong></td>
                                                            <td colspan="3" style="border: 1px solid #d3d3d3;">@Model.DelvDate.ToString("dd-MMM-yyyy")</td>

                                                        </tr>
                                                        <tr>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>Settelment No</strong></td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;">@Model.TrnDelvSettno</td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"></td>
                                                            <td colspan="2" style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>Bill No</strong></td>
                                                            <td colspan="3" style="border: 1px solid #d3d3d3;">@Model.BillNo</td>

                                                        </tr>
                                                    </tbody>
                                                </table>
                                           
                                            <br />
                                          
                                                <table class="table table-striped table-bordered" style="width:100%">
                                                    <tbody>
                                                        <tr>
                                                            <td style="text-align: center; border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;" colspan="2"><strong></strong></td>
                                                            <td style="text-align: center; border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;" colspan="4"><strong> PURCHASE</strong></td>
                                                            <td style="text-align: center; border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong></strong></td>
                                                            <td style="text-align: center; border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;" colspan="4"><strong>SALE</strong></td>
                                                        </tr>
                                                        <tr>
                                                            <td style="border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Scrip Name</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Flag</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Qty</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Mkt Rate</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Net Rate</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Value</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong></strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Qty</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Mkt Rate</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Net Rate</strong></td>
                                                            <td style="text-align: center;border: 1px solid  #808080;background-color:#ffa7a8;font-size: 12px;font-weight: bold;"><strong>Value</strong></td>
                                                        </tr>
                                                        @{
                                                                string str = "";
                                                                int pqty = 0;
                                                                decimal pvalue = 0;
                                                                int sqty = 0;
                                                                decimal svalue = 0;
                                                                foreach (Rising.WebRise.Models.BillDetailsOutputRow rw in Model.listBillDetailsOutputRow)
                                                                {
                                                                    if (str != "" && str != rw.ScripName)
                                                                    {
                                                            <tr style="background-color:#dee2e6;  font-size:12px; color:black;">
                                                                <td style="font-size:12px;border: 1px solid  #d3d3d3;"><strong>Total :</strong> </td>
                                                                <td style="text-align: center;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@pqty</strong></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@pvalue</strong></td>
                                                                <td style="text-align: center;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@sqty</strong></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"> </td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"> </td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@svalue</strong></td>
                                                            </tr>
                                                                        pqty = 0;
                                                                        pvalue = 0;
                                                                        sqty = 0;
                                                                        svalue = 0;
                                                                    }
                                                                    str = rw.ScripName;
                                                                    if (rw.Flag != "BF" || rw.Flag != "CF")
                                                                    {
                                                                        pqty = pqty + rw.PurQty;
                                                                        pvalue = pvalue + rw.PurValue;
                                                                        sqty = sqty + rw.SaleQty;
                                                                        svalue = svalue + rw.SaleValue;
                                                                    }
                                                            <tr>
                                                                <td style="font-size:12px;border: 1px solid  #d3d3d3;">@rw.ScripName</td>
                                                                <td style="text-align: center;font-size:12px;border: 1px solid  #d3d3d3;">@rw.Flag</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.PurQty</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.PurMktRate</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.PurNetRate</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.PurValue</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.SaleQty</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.SaleMktRate</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.SaleNetRate</td>
                                                                <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.SaleValue</td>

                                                            </tr>
                                                                }
                                                        }

                                                        <tr style="background-color:#dee2e6; font-size:12px; color:black;">
                                                            <td style="font-size:12px;border: 1px solid  #d3d3d3;"><strong>Total :</strong> </td>
                                                            <td style="text-align: center;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@pqty</strong></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@pvalue</strong></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@sqty</strong></td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"> </td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"> </td>
                                                            <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;"><strong>@svalue</strong></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                           
                                            <br />

                                          
                                                <table class="table table-striped table-bordered" style="width:100%">
                                                    <caption></caption>
                                                    <tbody style="font-size:12px;">
                                                        <tr>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.NSETaxNarration</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.NSETax</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.StampDutyNarration</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.StampDuty</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.BrokNarration</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.Brok</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.DematNarration</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.Demat</td>
                                                        </tr>

                                                        <tr>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.Tax1Narration</strong></td>
                                                            <td style="text-align: right;border: 1px solid #d3d3d3;">@Model.Tax1</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.Tax2Narration</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.Tax2</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>@Model.Tax3Narration</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.Tax3</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>STT </strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.STTAmt</td>
                                                        </tr>

                                                        <tr>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>CGST</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.CGST</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>SGST</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.SGST</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>IGST</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.IGST</td>
                                                            <td style="border: 1px solid #d3d3d3;"></td>
                                                            <td style="border: 1px solid #d3d3d3;color:darkgreen;"><strong>NetBalance</strong></td>
                                                            <td style="border: 1px solid #d3d3d3;text-align: right;">@Model.NetBalance</td>
                                                        </tr>

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


   


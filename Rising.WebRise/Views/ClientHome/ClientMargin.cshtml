@using Rising.WebRise.Models
@model GenericModel
@using System.Data
@{
    ViewBag.Title = "ClientMargin";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<style>
    .table-box {
        height: 500px !important;
        overflow-y: scroll;
        background: #fff;
    }

    table {
        width: 100%;
    }

    table, th, td {
        border: 1px solid #808080;
        border-collapse: collapse;
    }

    th {
        position: sticky;
        top: 0;
        color: #fff;
        background: #00bcd4;
    }
</style>
}

<div class="page-wrapper" style="margin-top: 72px;">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-12" id="Ledger" style="margin: auto;">
                <div class="card" style="margin-top: 20px;">
                    <div class="card-header" style="background-color:#eb2c2e70;">
                        <h4 class="card-title" style="color:white;margin-top: 10px;font-size:18px">Client Report</h4>
                    </div>
                    <!--end card-header-->
                    <div class="card-body">

                        <!--end row-->
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="btn btn-info">Date Range- @Model.DateFrom.ToString("dd-MMM-yyyy"):@Model.DateTo.ToString("dd-MMM-yyyy") </div>
                            </div>

                            <div class="col-sm-6">
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    <a href="javascript:void(0);" class="btn btn-dark" onclick="history.go(-1);"><i class="fa fa-arrow-left"></i></a>

                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportExcel", "ReportExport", FormMethod.Post))
                                    {
                                        <input type="hidden" name="GridHtml1" />
                                        <button type="submit" class="btn btn-success" id="btnSubmit1"><i class="fa fa-file-excel"></i></button>

                                    }

                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportWord", "ReportExport", FormMethod.Post))
                                    {
                                        <input type="hidden" name="GridHtml2" />
                                        <button type="submit" class="btn btn-info" id="btnSubmit2"><i class="fa fa-file-word"></i></button>

                                    }
                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportPdf", "ReportExport", FormMethod.Post))
                                    {
                                        <input type="hidden" name="GridHtml3" />
                                        <button type="submit" class="btn btn-danger" id="btnSubmit3"><i class="fa fa-file-pdf"></i></button>

                                    }
                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("SendEmail", "ReportExport", FormMethod.Post))
                                    {
                                        <input type="hidden" name="GridHtml4" />
                                        <button type="submit" class="btn btn-orange" id="btnSubmit4"><i class="fa fa-envelope"></i></button>

                                    }
                                </div>
                            </div>

                        </div>

                        <div class="row">

                            <div class="col-lg-12" style="margin: auto;">
                                <div class="card" id="ExportedGrid">
                                    <div class="card-body" style="padding: 0;">
                                        <div class="table-responsive browser_users">
                                            @if (Model.dsOut.Tables.Count > 0)
                                            {
                                                <div class="table-responsive table-box">

                                                    <table class="table table-striped table-bordered" style="width:1500px;">
                                                        <thead>
                                                            <tr>

                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">MARGIN DATE</th>
                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">EXCHANGE</th>
                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">INITIAL MGN</th>
                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">EXPOSURE MGN</th>
                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">MTM LOSS</th>
                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">ADDITIONAL MGN</th>
                                                                <th style="border: 1px solid  #808080;text-align:center; background-color:#6496d8;font-size: 12px;font-weight: bold;color: white;">TOTAL MGN</th>
                                                               


                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                          
                                                                <tr>
                                                                    <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                    <td style="text-align: left;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                    <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                    <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                    <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                    <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                    <td style="text-align: center;font-size: 12px;border: 1px solid  #d3d3d3;">0</td>
                                                                   


                                                                </tr>



                                                        </tbody>

                                                    </table>


                                                </div>
                                            }

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


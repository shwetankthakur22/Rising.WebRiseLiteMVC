@model Rising.WebRise.Models.DPHoldingOutput

@{
    ViewBag.Title = "DP Holding AsOnDate";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="page-wrapper" style="margin-top: 72px;">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-11 col-md-11 col-sm-11" id="Ledger" style="margin: auto;">


                <div class="card" style="margin-top:20px;">
                    <div class="card-header" style="background-color:#eb2c2e70;">
                        <h4 class="card-title" style="color:black">DP Holding Report</h4>

                    </div>
                    <!--end card-header-->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="btn btn-info">As On Date - @Model.AsOnDate.ToString("dd-MMM-yyyy")</div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    <a href="javascript:void(0);" class="btn btn-dark" onclick="history.go(-1);"><i class="fa fa-arrow-left"></i></a>

                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportExcel", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml1" />
                                    <button type="submit" class="btn btn-success" id="btnSubmit1"><i class="fa fa-file-excel-o"></i></button>

                                    }

                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportWord", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml2" />
                                    <button type="submit" class="btn btn-info" id="btnSubmit2"><i class="fa fa-file-word-o"></i></button>

                                    }
                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("ExportPdf", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml3" />
                                    <button type="submit" class="btn btn-danger" id="btnSubmit3"><i class="fa fa-file-pdf-o"></i></button>

                                    }
                                </div>
                                <div style="float:right;padding:2px 2px 2px 2px">

                                    @using (Html.BeginForm("SendEmail", "ReportExport", FormMethod.Post))
                                    {
                                    <input type="hidden" name="GridHtml4" />
                                    <button type="submit" class="btn btn-orange" id="btnSubmit4"><i class="fa fa-envelope"></i></button>

                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12 col-md-12 col-sm-12" style="margin: auto;">
                                    <div class="card" id="ExportedGrid">
                                        <div class="card-body" style="padding: 0;">
                                            <div class="table-responsive  browser_users">
                                                <div class="analytic-dash-activity" data-simplebar>
                                                    <div class="activity">
                                                        <table class="table table-striped table-bordered" style="width:100%">

                                                            <thead>
                                                                <tr>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Scrip Name</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Stock ISIN</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Pledge</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Free</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Demat</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Lockin</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">Emark</th>
                                                                    <th style="text-align: center; border: 1px solid  #808080;background-color:gold;font-size: 12px;font-weight: bold;">NetStock</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>

                                                                @{

                                                                    foreach (Rising.WebRise.Models.DPHoldingOutputRow rw in Model.listDPHoldingOutputRow)
                                                                    {

                                                                <tr>
                                                                    <td style="font-size:12px;border: 1px solid  #d3d3d3;">@rw.ScripName</td>
                                                                    <td style="text-align: center; font-size:12px;border: 1px solid  #d3d3d3;">@rw.ScripISIN</td>
                                                                    <td style="text-align: right; font-size:12px;border: 1px solid  #d3d3d3;">@rw.Pledge</td>
                                                                    <td style="text-align: right; font-size:12px;border: 1px solid  #d3d3d3;">@rw.Free</td>
                                                                    <td style="text-align: right; font-size:12px;border: 1px solid  #d3d3d3;">@rw.Demat</td>
                                                                    <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.Lockin</td>
                                                                    <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.Emark</td>
                                                                    <td style="text-align: right;font-size:12px;border: 1px solid  #d3d3d3;">@rw.NetStock</td>
                                                                </tr>
                                                                    }
                                                                }
                                                            </tbody>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>



                                    </div>
                                </div>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

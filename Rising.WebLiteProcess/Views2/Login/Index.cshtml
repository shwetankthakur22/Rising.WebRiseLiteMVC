@using Rising.WebRise.Models
@model LoginViewModel
@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Login.cshtml";
}

<div class="col-lg-6">
    <a href="#" class="fxt-logo"><img src="Content/clientlogo.png" alt="Logo" /></a><h4 class="fxt-main-title">SHARE INDIA SECURITIES LIMITED</h4> <br />
   
   @using (Html.BeginForm("LogIn", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
   {
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <div class="col-lg-12">
                <div class="floating-label form-group">
                    @Html.TextBoxFor(m => m.UserID, new { @class = "floating-input form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.UserID, "", new { @class = "text-danger" })
                    <label>User Id</label>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="floating-label form-group">
                  
                    @Html.PasswordFor(m => m.Password, new { @class = "floating-input form-control", @placeholder = "" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <label>Password</label>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="custom-control custom-checkbox mb-3">
                    
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "custom-control-input", id = "customSwitch1" })
                    @Html.LabelFor(m => m.RememberMe, new { @class = "custom-control-label" })
                  
                </div>
            </div>
            <div class="col-lg-6 rtl-left">
                @Html.ActionLink("Forgot your password?", "Index", "ForgetPassword", new { area = "" }, new { @class = "text-primary float-right" })
          
            </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Log In</button>
        <p class="mt-3">
            <div class="fxt-switcher-description">306 3rd Floor,Angel Mega Mall ,Plot No. H-1 Kaushambi, Ghaziabad-201010 (U.P.)<a href="#" class="fxt-switcher-text ms-1">info@risingsoftech.com</a></div>
        </p>
   }
</div>










@using Rising.WebRise.Models
@model BillDetailSummaryInput
@{
    ViewBag.Title = "ExposurePortfolioInput";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">EXPOSURE AND PORTFOLIO</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="new-user-info">

                    @using (Html.BeginForm("BillSummaryDetail", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.Exchange, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.Exchange, new SelectList(new[] { "NSE", "INX" }), new { @class = "form-control" })
                            </div>                     
                            <div class="col-md-3 mb-3">
                                @Html.LabelFor(m => m.ClientCodeFrom, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ClientCodeFrom, null, new { @class = "form-control" })
                            </div>
                            <div class="col-md-1 mb-3">
                                <label class="form-label" style="margin-top: 38px;"></label>
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#CodeFrom"><i class="ri-search-fill pr-0"></i></button>
                           </div>
                            <div class="col-md-4 mb-3">
                                @Html.LabelFor(m => m.ClientName, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ClientName, null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.OnDate, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.OnDate, null, new { @Value = Model.TrDate.ToString("yyyy-MM-dd"), @class = "form-control", @id = "date-end", @type = "date" })
                            </div>
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.ClosePriceDate, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.ClosePriceDate, null, new { @Value = Model.ToDate.ToString("yyyy-MM-dd"), @class = "form-control", @id = "date-end", @type = "date" })
                            </div>
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.SessionId, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.SessionId, new SelectList(new[] { "1", "2" }), new { @class = "form-control" })
                            </div>                          
                        </div>
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.Branch, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.Branch, new SelectList(new[] { "" }), new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.Group, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Group, null, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="box-footer">
                            <input type="submit" value="View" class="btn btn-success pull-right" />
                            <a href="javascript:void(0);" class="btn btn-danger" onclick="history.go(-1);">Back</a>
                        </div>

                    }



                </div>
            </div>
        </div>

    </div>
</div>


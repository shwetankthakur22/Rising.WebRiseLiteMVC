@using Rising.WebRise.Models
@model FinancialInput
@using System.Data
@{
    ViewBag.Title = "ProftLossAccount";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h4 class="card-title">PROFIT AND LOSS ACCOUNT</h4>
                </div>
            </div>
            <div class="card-body">
                <div class="new-user-info">
                    <!--end card-header-->
                    @using (Html.BeginForm("ProftLossAccount", "Financial", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row" style="margin-bottom: 15px;">
                            <div class="col-md-4 col-12">
                                @Html.LabelFor(m => m.Exchange, new { @class = "form-label" })
                                @Html.DropDownListFor(m => m.Exchange, new SelectList(new[] { "NSE", "BSE", "ALL" }), new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-12" >
                                @Html.LabelFor(m => m.DateFrom, new { @class = "form-label", @style = "font-size: 14px;" })
                                @Html.TextBoxFor(m => m.DateFrom, null, new { @Value = Model.FinancialFrom.ToString("yyyy-MM-dd"), @class = "form-control", @id = "date-end", @type = "date" })
                            </div>
                          
                        </div>
                         
                        <div class="box-footer">
                            <input type="submit" value="View" class="btn btn-success pull-right" />
                            <a href="javascript:void(0);" class="btn btn-danger" onclick="history.go(-1);">Back</a>
                        </div>

                    }
                </div>

            </div>
        </div>
    </div>
</div>



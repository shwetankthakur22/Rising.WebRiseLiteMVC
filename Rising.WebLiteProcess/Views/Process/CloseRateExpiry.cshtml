@using Rising.WebRise.Models
@model CloseRateEntryIn
@{
    ViewBag.Title = "CloseRateExpiry";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<div class="row">
    <div class="col-xl-12 col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between">
                <div class="header-title">
                    <h5>CLOSING RATE ENTRY(ON EXPIRY)</h5>
                </div>
            </div>
            <div class="card-body">
                <div class="new-user-info">

                    <!--end card-header-->
                    @using (Html.BeginForm("CloseRateExpiry", "Process", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-md-7">
                                <div class="row">
                                    <div class="col-md-2">
                                        @Html.LabelFor(m => m.Exchange, new { @class = "form-label" })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.DropDownListFor(m => m.Exchange, new SelectList(new[] { "NSE", "INX" }), new { @class = "form-control" })
                                    </div>
                                    <div class="col-md-2">
                                        @Html.LabelFor(m => m.ExpiryDate, new { @class = "form-label" })
                                    </div>
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(m => m.ExpiryDate, null, new { @Value = Model.TrDate.ToString("yyyy-MM-dd"), @class = "form-control", @id = "date-end", @type = "date" })
                                    </div>

                                </div>
                            </div>
                        </div>
                        

                        <div class="box-footer"style="margin-top: 15px;">
                            <input type="submit" value="View" class="btn btn-primary pull-right" />
                            <a href="javascript:void(0);" class="btn btn-primary" onclick="history.go(-1);">Back</a>
                        </div>


                    }

                </div>

            </div>
        </div>
    </div>
</div>


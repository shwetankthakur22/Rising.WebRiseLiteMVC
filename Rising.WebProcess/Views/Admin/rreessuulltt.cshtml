@using Rising.WebRise.Models
@model admin_query
@using System.Data


@{
    ViewBag.Title = "qquueerryy";
    <style>
        .table-box {
            height: 600px;
            overflow-y: scroll;
            background: #fff;
        }

        table {
            width: 100%;
        }

        table, th, td {
            border: 1px solid #808080;
            border-collapse: collapse;
        }

        th {
            position: sticky;
            top: 0;
            color: #fff;
            background: #00bcd4;
        }
    </style>
}



<div class="page-wrapper">
    <!-- Page Content-->
    <div class="page-content">
        <!-- Page-Title -->
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="row">


                    </div>
                    <!--end row-->
                </div>
                <!--end page-title-box-->
            </div>
            <!--end col-->
        </div>

        <div class="row">
            <div class="col-lg-6" id="Ledger" style="margin: auto;">

                <div style="float:right;padding:2px 2px 2px 2px">

                    <a href="javascript:void(0);" class="btn btn-dark" onclick="history.go(-1);"><i class="fa fa-arrow-left"></i></a>

                </div>
                <div style="margin-top:10px;">
                    @using (Html.BeginForm("rreessuulltt", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                       


                            <div class="row">
                                <div class="col-lg-6" style="margin: auto;">

                                    <div class="card" id="ExportedGrid">
                                        <div class="card-body" style="padding: 0;">
                                            <div class="table-responsive table-box">
                                                <table class="table table-striped table-bordered" style="width:100%">


                                                    @foreach (DataRow dr in Model.result.Tables[0].Rows)
                                                    {
                                                        <tr>
                                                            @foreach (var cl in dr.ItemArray)
                                                            {
                                                                <td style="border: 1px solid  #d3d3d3;font-size: 12px">@cl</td>
                                                            }
                                                        </tr>
                                                    }
                                                </table>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        

                    }
                </div>
            </div>
        </div>
    </div>
</div>



